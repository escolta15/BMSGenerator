.touch_panel {
  background-color: <%= @touch_screen.get_color %>;
  width: <%= @touch_screen.width %>;
  height: <%= @touch_screen.height %>;
  <% if @touch_screen.get_color == "#2A2A2C" %>
    color: white;
  <% end %>

  &.lcd {
    filter: brightness(1.25);
  }

  &.magnet {
    border-style: solid;
    border-width: 10px;
  }

  ::ng-deep .mat-mdc-tab-header {
    background-color: black;
    height: 48px;
  }

  ::ng-deep .mat-mdc-tab-label-container {
    align-items: center;
  }

  ::ng-deep .mat-mdc-tab-header-pagination {
    color: white;
  }

  ::ng-deep .mdc-tab__text-label {
    color: white !important;
    font-size: 16px;
  }

  .features {
    position: absolute;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    bottom: 0;
    right: 0;
    width: 100%;

    .features--left {
      float: left;

      .programming {
        display: flex;
        flex-direction: column;
        gap: 16px;

        button {
          cursor: pointer;
        }
      }
    }

    .features--right {
      float: right;
    }
  }
}
