.touch_panel {
  background-color: <%= @touch_screen.get_color %>;
  width: <%= @touch_screen.width %>;
  height: <%= @touch_screen.height %>;
  <% if @touch_screen.get_color == "#2A2A2C" %>
    color: white;
  <% end %>

  &.lcd {
    filter: brightness(1.25);
  }

  &.magnet {
    border-style: solid;
    border-width: 10px;
  }

  ::ng-deep .mat-tab-label {
    height: 32px !important;
  }

  .features {
    position: relative;

    .features--left {
      float: left;

      .programming {
        display: flex;
        flex-direction: column;
        gap: 16px;

        button {
          cursor: pointer;
        }
      }
    }

    .features--right {
      float: right;
    }
  }

  .power {
    position: absolute;
    display: flex;
    align-items: flex-end;
    justify-content: flex-end;
    bottom: 0;
    right: 0;
    width: 100%;
  }
}
