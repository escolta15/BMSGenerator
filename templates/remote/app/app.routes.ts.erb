import { Routes } from '@angular/router';
import { AppComponent } from './app.component';
import { canActivateRedirection } from '../guards/redirection.guard'

export const routes: Routes = [
    {
        path: '',
        children: [
            {
                path: '',
                redirectTo: 'touchscreen',
                pathMatch: 'full',
            },
            {
                path: 'touchscreen',
                component: AppComponent,
                loadChildren: () => import('./children.routes'),
                canActivate: [canActivateRedirection],
            },
            {
                path: 'internal',
                loadChildren: () => import('./children.routes'),
            },
        ]
    }
];