h1 {
  display: flex;
  justify-content: center;
  font-size: 24px;
}

h2 {
  font-size: 12px;
}

.box {
  display: flex;
  justify-content: center;
  gap: 16px;

  .button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    padding: 10px;

    &.fs-32 {
      font-size: 32px;
    }
  }
}