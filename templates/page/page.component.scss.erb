.page-grid {
  margin-top: 10px;
  display: grid;
  <% if @touch_screen.width == "320px" %>
  grid-auto-flow: column;
  <% else %>
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(2, 1fr);
  <% end %>
  grid-gap: 10px;
}

.box {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 64px;
  border: 1px solid #ccc;
  padding: 10px;
  cursor: pointer;

  .icon-size {
    font-size: xxx-large;
    height: auto;
    width: auto;
  }
}

.box--s {
  width: fit-content;
}