.page-grid {
  margin-top: 10px;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(2, 1fr);
  gap: 10px;
}

.box {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 64px;
  border: 1px solid #ccc;
  padding: 10px;
  cursor: pointer;

  .icon-size {
    font-size: xxx-large;
    height: auto;
    width: auto;
  }
}